{
    "scripts": {
        "dev": "nodemon -x npm run build -e js,less,jpg --watch src",
        "images": "imagemin src/**/*.jpg --plugin webp --out-dir=public/dist",
        "less": "lessc src/main.less public/dist/main.css --clean-css",
        "js": "minify src/main.js -d public/dist",
        "build": "npm run images && npm run less && npm run js"
    },
    "dependencies": {
        "babel-minify": "^0.5.1",
        "imagemin-cli": "^6.0.0",
        "imagemin-webp": "^6.0.0",
        "less": "^3.12.2",
        "less-plugin-clean-css": "^1.5.1",
        "nodemon": "^2.0.6"
    }
}
